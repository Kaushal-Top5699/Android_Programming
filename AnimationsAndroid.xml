<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.trans__elcapitan.seekbar.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView" />

        <TextView
            android:text="Large Text"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/textStatus" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp">

        <Button
            android:text="Fade In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btnFadeIn" />

        <Button
            android:text="Fade Out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnFadeOut" />

        <Button
            android:text="Fade InOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnFadeOut"
            android:layout_alignParentEnd="true"
            android:id="@+id/btnFadeInOut" />

        <Button
            android:text="Zoom In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/btnZoomIn"
            android:layout_below="@+id/btnFadeIn" />

        <Button
            android:text="Zoom Out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnZoomIn"
            android:layout_alignParentEnd="true"
            android:id="@+id/btnZoomOut" />

        <Button
            android:text="Left Right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLeftRight"
            android:layout_below="@+id/btnZoomIn"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Right Left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnLeftRight"
            android:layout_alignEnd="@+id/btnFadeOut"
            android:id="@+id/btnRightLeft" />

        <Button
            android:text="Top Bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnZoomOut"
            android:layout_alignParentEnd="true"
            android:id="@+id/btnTopBottom" />

        <Button
            android:text="Bounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnLeftRight"
            android:layout_alignParentStart="true"
            android:id="@+id/btnBounce" />

        <Button
            android:text="Flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnTopBottom"
            android:layout_alignStart="@+id/btnTopBottom"
            android:id="@+id/btnFlash" />

        <Button
            android:text="Rotate Left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="43dp"
            android:id="@+id/btnRotateLeft" />

        <Button
            android:text="Rotate Right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRotateRight"
            android:layout_alignBaseline="@+id/btnRotateLeft"
            android:layout_alignBottom="@+id/btnRotateLeft"
            android:layout_alignParentEnd="true" />

        <SeekBar
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="22dp"
            android:id="@+id/seekBarSpeed"
            android:max="5000" />

        <TextView
            android:text="                "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/seekBarSpeed"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:id="@+id/textSeekerSpeed" />
    </RelativeLayout>
</RelativeLayout>
